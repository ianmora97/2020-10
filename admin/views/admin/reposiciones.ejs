<body class="page bg-light d-flex flex-column h-100">
    <div class="modal fade" id="selecCalendarReposicion" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="selecCalendarReposicionLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="selecCalendarReposicionLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="calendar"></div>
                    <style>
                        #calendar {
                            width:100%;
                        }
                        .fc-daygrid-event{
                            white-space: normal !important;
                            padding: 5px;
                        }
                    </style>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalAdd" data-keyboard="false" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header pl-3 border-0 bg-primary text-white">
                    <h5 class="modal-title ml-3" id="staticBackdropLabel">Solicitar una Reposicion</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalbodyAdd">
                    <div id="modalbodyAddFeedback"></div>
                    <form action="/admin/taller/reposicion/crearReposicion" method="POST" enctype="multipart/form-data" id="agregarRepo">
                        <div class="row mx-auto">
                            <div class="col-lg border-right">
                                <div class="form-group">
                                    <label for="estudiantesAddSelect">Estudiante</label>
                                    <select class="custom-select" id="estudiantesAddSelect" name="id_estudiante" required>
                                        
                                    </select>
                                </div>
                                <p>Asistencias Perdidas</p>
                                <div class="list-group border w-100" 
                                style="height:400px; overflow-y: auto;" 
                                id="ausenciasAgregarReposicion">
                                </div>
                                <%if(typeof newUI != "undefined"){%>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#selecCalendarReposicion">
                                        Launch static backdrop modal
                                    </button>
                                <%}%>
                            </div>
                            <div class="col-lg-6" style="display: none;" id="escogerReposicion">
                                <div class="form-group">
                                    <label for="grupoAddSelect">Grupo de reposicion</label>
                                    <select class="custom-select" id="grupoAddSelect" name="grupo_reposicion" required>
                                        
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="fileFoto">Comprobante</label>
                                    <div class="custom-file">
                                        <input class="custom-file-input"  type="file" id="fileFoto" name="image" required>
                                        <label class="custom-file-label" for="inputGroupFile01">Escoger Archivo</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fechareposicion">Fecha de reposicion</label>
                                    <input class="form-control" type="date" id="fechareposicion" name="fecha_reposicion" required>
                                </div>
                                <div class="form-group">
                                    <label for="observacionTexto">Observacion</label>
                                    <textarea class="form-control" id="observacionTexto" name="observacionTexto" rows="4" required></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" form="agregarRepo" id="agregarReposicionBtn">Agregar Reposicion</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalComprobante" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary" id="titleModalComprobante">Reposicion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="bodyComprobante">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
