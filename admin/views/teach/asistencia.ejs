<!DOCTYPE html>
<html lang="es" style="overflow-x: hidden; height: 100%;">
<head>
    <title>Instructor | Grupos</title>
    <%- include('headers') %>
    <script src="/js/teach/qrScan.js"></script>
</head>
<body style="overflow-x:hidden;" class="d-flex flex-column h-100">
    <span class="sr-only" id="id_usuario"><%= usuario.id_usuario%></span>
    <span class="sr-only" id="id_profesor"><%= usuario.id_profesor%></span>
    <span class="sr-only" id="id_cedula"><%= usuario.cedula%></span>
    <span class="sr-only" id="idGrupo"><%= grupo%></span>
    <%- include('menu') %>
    <div id="wrapperTeach">
        <%- include('header') %>
        <div class="container-fluid my-2">
            <div class="" id="infoGrupo"></div>
        </div>
        <div class="d-flex justify-content-center flex-column w-100">
            <div style="width: 100%" id="reader" style="border:none !important"></div>
        </div>
        <div class="container-fluid mt-3">
            <div class="d-flex justify-content-between align-items-end">
                <h5 class="mb-0">Listado</h5>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-secondary btn-sm" id="btnCamara" style="display: none;"><i class="fas fa-camera"></i></button>
                    <button class="btn btn-primary btn-sm" id="btnEnviarAsistencia">Enviar Asistencia</button>
                </div>
            </div>
            
        </div>
        <div id="contentLista" class="row mx-0 mb-5 mt-3 p-0 w-100">
            
        </div>
        <div class="container-fluid mt-4">
            <h5 class="mb-0">Asistencias de hoy</h5>
            <hr class="my-2">
        </div>
        <div id="asistenciaEnviada">

        </div>
        <%- include('footer') %>
    </div>
    <script src="/js/teach/asistencia.js"></script>
</body>
</html>