                            <textarea class="form-control" name="anotacion" id="anotacionEstudiante" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" id="crearAnotacionButton">Crear Anotacion</button>
                </div>
            </div>
        </div>
    </div>
    
